@model IEnumerable<MedicalManager.Models.Room>

@{
    ViewBag.Title = "Index";
}

<h2>Rooms</h2>

<p>
    <a href="/rooms/create" class="btn btn-default">+ Add a room</a>
</p>
<table class="table">
    <tr>
        <th>
            Room Number
        </th>
        <th>
            Room Phone
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="/rooms/details/@item.RoomId">@item.RoomId</a>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RoomPhoneNumber)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RoomId }) |
            @Html.ActionLink("Details", "Details", new { id=item.RoomId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RoomId })
        </td>
    </tr>
}

</table>
